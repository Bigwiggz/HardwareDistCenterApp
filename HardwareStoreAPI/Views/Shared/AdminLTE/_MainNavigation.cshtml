@using static HardwareStoreAPI.Extensions.View.NavigationIndicatorHelper;

@{
}

<!--AdminLTE Main Navigation-->

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
        <img src="~/img/favicon-32x32.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Alpha Tech Inc.</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Hi, @User.Identity.Name </a>
                </div>
            </div>
        }
        else
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Hi, Visitor</a>
                </div>
            </div>
        }

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                 with font-awesome or any other icon font library -->
                <li class="nav-item menu-open">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Starter Pages
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>

                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Index" class="nav-link @Url.MakeActiveClass("Dashboard","index")">
                                <i class="fas fa-tachometer-alt nav-icon"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                                <i class="fas fa-home nav-icon"></i>
                                <p>Home</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="CPI" asp-action="Index" class="nav-link @Url.MakeActiveClass("CPI","index")">
                                <i class="fas fa-chart-line nav-icon"></i>
                                <p>CPI</p>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("home", "privacy")">
                                    <i class="fas fa-lock nav-icon"></i>
                                    <p>Privacy</p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a asp-controller="Personnel" asp-action="Index" class="nav-link @Url.MakeActiveClass("Personnel","index")">
                                <i class="fas fa-users nav-icon"></i>
                                <p>Personnel</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="SalesContacts" asp-action="Index" class="nav-link @Url.MakeActiveClass("SalesContacts","index")">
                                <i class="fas fa-address-card nav-icon"></i>
                                <p>Sales Contacts</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Sales" asp-action="Index" class="nav-link @Url.MakeActiveClass("Sales","index")">
                                <i class="fas fa-dollar-sign nav-icon"></i>
                                <p>Sales</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="StoreLocations" asp-action="Index" class="nav-link @Url.MakeActiveClass("StoreLocations","index")">
                                <i class="fas fa-store-alt nav-icon"></i>
                                <p>Store Locations</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="DistributionCenters" asp-action="Index" class="nav-link @Url.MakeActiveClass("DistributionCenters","index")">
                                <i class="fas fa-warehouse nav-icon"></i>
                                <p>Distribution Centers</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ProductCatalog" asp-action="Index" class="nav-link @Url.MakeActiveClass("ProductCatalog","index")">
                                <i class="fas fa-book nav-icon"></i>
                                <p>Product Catalog</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Invoices" asp-action="Index" class="nav-link @Url.MakeActiveClass("Invoices","index")">
                                <i class="fas fa-file-invoice-dollar nav-icon"></i>
                                <p>Invoices</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Receipts" asp-action="Index" class="nav-link @Url.MakeActiveClass("Receipts","index")">
                                <i class="fas fa-receipt nav-icon"></i>
                                <p>Receipts</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Territories" asp-action="Index" class="nav-link @Url.MakeActiveClass("Territories","index")">
                                <i class="fas fa-map-marked-alt nav-icon"></i>
                                <p>Territories</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Configuration" asp-action="Index" class="nav-link @Url.MakeActiveClass("Configuration","index")">
                                <i class="fas fa-cogs nav-icon"></i>
                                <p>Configuration/Settings</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Help" asp-action="Index" class="nav-link @Url.MakeActiveClass("Help","index")">
                                <i class="fas fa-question-circle nav-icon"></i>
                                <p>Help?</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Simple Link
                            <span class="right badge badge-danger">New</span>
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>